<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.MissionEntity" table="mission" schema="spring_docker">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(32)" length="32" not-null="true"/>
        </property>
        <property name="imageryType">
            <column name="imagery_type" sql-type="enum('panchromatic', 'multispectral', 'hyperspectral')"
                    not-null="true"/>
        </property>
        <property name="startDate">
            <column name="start_date" sql-type="datetime" not-null="true"/>
        </property>
        <property name="finishDate">
            <column name="finish_date" sql-type="datetime" not-null="true"/>
        </property>
        <many-to-one name="productByName" class="entity.ProductEntity">
            <column name="name" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>